@model (List<Film_Arsiv.Models.Film>, int, bool)
@{
	Layout = "_Layout";
}

<div class="search-box">
	<input id="search" data-source="1" type="text" name="filmTitle" placeholder="Film ara...">
</div>

<section class="film-list">
	@foreach (var film in Model.Item1)
	{
		<div class="film-card">
			<a href="@Url.Action("FilmDetail", new { id = film.ID })"><img src="@film.Poster" alt="@film.Title"></a>
			<a href="@Url.Action("FilmDetail", new { id = film.ID })">
				<div class="film-info">
					<h3>@film.Title (@film.Year)</h3>
					<p>@film.Plot.Substring(0, 50) ...</p>
				</div>
			</a>
		</div>
	}
</section>

<div id="filmPagination" class="pagination">
	@if (Model.Item2 > 1)
	{
		<a href="?page=@(Model.Item2 - 1)">Önceki Sayfa</a>
	}
	@if (Model.Item3)
	{
		<a href="?page=@(Model.Item2 + 1)">Sonraki Sayfa</a>
	}
</div>